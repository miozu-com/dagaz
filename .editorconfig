# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 112


[package.json]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,svelte}]
indent_style = space
indent_size = 2

[*.{css,scss,pcss}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
